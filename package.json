{
  "name": "codersden-attendance-backend",
  "version": "1.0.0",
  "description": "This project is designed to manage attendance for various coding classes, providing both students and tutors with an efficient platform to track and manage class schedules and attendance.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "build": "babel src -d dist",
    "start:prod": "cross-env NODE_ENV=production pm2 start src/server.js --name codersden-attendance-backend"
  },
  "keywords": [],
  "author": "Sub-Group 12",
  "license": "ISC",
  "dependencies": {
    "apicache": "^1.6.3",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.2",
    "kue": "^0.11.6",
    "mongoose": "^8.6.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.12.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/kue": "^0.11.2",
    "@types/node": "^20.4.7",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.12.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "lint-staged": "^13.2.3",
    "mongodb-memory-server": "^10.0.0",
    "nodemon": "^3.1.4",
    "pm2": "^5.4.1",
    "prettier": "^3.0.1",
    "supertest": "^7.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {}
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
